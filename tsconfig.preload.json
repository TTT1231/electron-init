{
   "extends": "./tsconfig.node.json",
   "compilerOptions": {
      "lib": ["ES2020"],
      "paths": {
         "@preload/*": ["src/preload/*"],
         "@shared/*": ["src/shared/*"],
         "@resources/*": ["resources/*"]
      }
   },
   "include": [
      "src/preload/**/*.ts",
      "src/preload/**/*.d.ts",
      "src/shared/**/*.ts",
      "src/shared/**/*.d.ts"
   ],
   "exclude": []
}
